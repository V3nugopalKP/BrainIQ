<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#202040">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/image" />

    <!-- Developer Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venugopal K P"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- College Information -->
    <TextView
        android:id="@+id/profileCollege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amrita Vishwa Vidyapeetham, Amritapuri"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Technologies Section -->
    <TextView
        android:id="@+id/profileTechnologies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technologies: Android, Java, Kotlin, Python, Machine Learning"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center" />

</LinearLayout>
